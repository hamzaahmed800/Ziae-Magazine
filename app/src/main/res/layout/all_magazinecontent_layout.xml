<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="5dp"
    android:layout_marginRight="1dp"
    android:layout_marginLeft="1dp"
    >

    <RelativeLayout
        android:id="@+id/headTextLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/short_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="  dasdasasffdsgf  "
            android:textStyle="bold"
            android:textColor="#fff"
            android:textSize="20sp"
            android:background="@color/colorPrimaryDark"/>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/topic_image_layout"
        android:layout_width="match_parent"
        android:layout_height="265dp"
        android:background="@color/colorAccent"
        android:layout_below="@+id/headTextLayout"
        >

        <ImageView
            android:id="@+id/topic_image"
            android:layout_width="340dp"
            android:layout_height="220dp"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:indeterminateTint="@color/colorPrimary"
            android:indeterminateTintMode="src_in"
            android:visibility="visible" />


        <TextView
            android:id="@+id/readmoreText"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_below="@+id/topic_image"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:textColor="#000"
            android:layout_marginTop="10dp"
             />

        <Button
            android:id="@+id/readmorebutton"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/round_background"
            android:textColor="#fff"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="3dp"
            />



    </RelativeLayout>





</RelativeLayout>