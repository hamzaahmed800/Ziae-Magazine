<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/searchframeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="ziaetaiba.com.zia_e_magazine.Fragments.SearchFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:id="@+id/searchRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <RelativeLayout
            android:id="@+id/views_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:visibility="visible"
            >


            <LinearLayout
                android:id="@+id/searchlinearlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="60dp"
                android:visibility="visible">

                <RelativeLayout
                    android:id="@+id/img_icon_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">

                        <ImageView
                            android:id="@+id/search_img_icon"
                            android:layout_width="50dp"
                            android:layout_height="45dp"
                            android:src="@drawable/search_img"
                            android:layout_alignParentRight="true"
                            android:layout_toEndOf="@+id/searchText"/>


                    <EditText
                        android:id="@+id/searchText"
                        android:layout_width="270dp"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"
                        android:textDirection="rtl"
                        android:backgroundTint="@color/colorPrimaryDark"/>

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <Button
                        android:id="@+id/searchButton"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:background="@color/colorPrimaryDark"
                        android:textColor="#fff" />

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/recyclerview_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/views_layout"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:visibility="visible"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="1dp">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/search_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">
            </android.support.v7.widget.RecyclerView>


        </RelativeLayout>



    </RelativeLayout>

