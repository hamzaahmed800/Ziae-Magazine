<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detailFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ziaetaiba.com.zia_e_magazine.Fragments.DetailFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/detailheadingText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="heading"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="25sp"
            android:gravity="center"
            android:layout_marginBottom="5dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/headImage"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="3dp"/>

        <ProgressBar
            android:id="@+id/detailprogressBar"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:indeterminateTint="@color/colorPrimary"
            android:indeterminateTintMode="src_in"
            android:visibility="visible" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="3dp">


            <TextView
                android:id="@+id/descriptionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="hhhhhhh"
                android:textSize="18dp"
                android:textColor="#000"/>

            <ImageView
                android:id="@+id/articleImage1"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_toEndOf="@+id/descriptionText"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/articleImage2"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_below="@id/articleImage1"
                android:layout_toEndOf="@id/descriptionText"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/articleImage3"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_below="@id/articleImage2"
                android:layout_toEndOf="@id/descriptionText"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/articleImage4"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_below="@id/articleImage3"
                android:layout_toEndOf="@id/descriptionText"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/articleImage5"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_below="@id/articleImage4"
                android:layout_toEndOf="@id/descriptionText"
                android:visibility="gone"/>


        </RelativeLayout>

    </LinearLayout>
    </ScrollView>


</FrameLayout>
